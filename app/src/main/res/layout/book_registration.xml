<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.book_registration.BookRegistration">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/book_registration_title"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:hint="@string/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableStart="@drawable/ic_launcher_title"
        android:autofillHints="Campo para escrever o título do livro"
        android:inputType="text" />

    <EditText
        android:id="@+id/book_registration_author"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:autofillHints="Campo para escrever o título do livro"
        android:drawableStart="@drawable/ic_open_profile_menu"
        android:hint="@string/book_registration_author"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/book_registration_title"
        app:layout_constraintTop_toTopOf="@id/book_registration_title" />

    <EditText
        android:id="@+id/book_registration_description"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="78dp"
        android:autofillHints="description"
        android:drawableStart="@drawable/ic_launcher_pen"
        android:hint="@string/book_registration_description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toStartOf="@+id/include"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/book_registration_author"
        app:layout_constraintTop_toTopOf="@+id/book_registration_author" />

    <androidx.cardview.widget.CardView
        android:id="@+id/book_registration_card_view"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_registration_description">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/book_registration_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_grotto"
            android:text="@string/book_registration_btn_submit"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>